<% layout("/layouts/boilerplate") %> 

<body>

<style>
   #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;

   }

   .filter {
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity: 0.7;
   }

   .filter:hover {
      opacity: 1;
      cursor: pointer;
   }

   .filter p {
      font-size: 0.8rem ;
      color: black; 
     
   }
   
   .filter i {
    color: black; 
   }

   .filter a {
    text-decoration: none; 
}

   .tax-info {
     display: none;
   }

   .tax-toggle {                    /* tax box */
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
   }

</style>

<div id="filters" >
    <div class="filter">
    <a href="/listings?category=trending"><i class="fa-solid fa-fire"></i>
       <p>Trending</p> </a>
    </div>

    <div class="filter">
      <a href="/listings?category=room"><i class="fa-solid fa-bed"></i>
       <p>Rooms</p> </a>
    </div>

    <div class="filter">
      <a href="/listings?category=iconic"><i class="fa-solid fa-mountain-city"></i>
       <p>Iconic Cities</p> </a>
    </div>

    <div class="filter">
      <a href="/listings?category=mountain"><i class="fa-solid fa-mountain"></i>
       <p>Mountains</p> </a> 
    </div>

    <div class="filter">
      <a href="/listings?category=castle"><i class="fa-brands fa-fort-awesome"></i>
       <p>Castles</p> </a>
    </div>

    <div class="filter">
      <a href="/listings?category=amazing pools"><i class="fa-solid fa-person-swimming"></i>
       <p>Amazing Pools</p> </a> 
    </div>

    <div class="filter">
      <a href="/listings?category=camping"><i class="fa-solid fa-campground"></i>
       <p>Camping</p> </a>
    </div>

    <div class="filter">
      <a href="/listings?category=farm"><i class="fa-solid fa-cow"></i> 
       <p>Farms</p> </a>
    </div>

    <div class="filter">
      <a href="/listings?category=arctic"><i class="fa-solid fa-snowflake"></i>
       <p>Arctic</p> </a>
    </div>

    <div class="filter">
      <a href="/listings?category=boat"><i class="fa-solid fa-ship"></i>
       <p>Boats</p> </a>
    </div>

    <div class="filter">
      <a href="/listings?category=dome"><i class="fa-solid fa-igloo"></i>
       <p>Domes</p> </a>
    </div>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
      </div>
    </div>

</div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" id="listingGrid ">
        
        <%    for(let listing of allListings ) {   %>   <!--1 card ke liye-->
    
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card" >
                
              <img src="<%= listing.image.url %>" 
                class="card-img-top" alt="listing_image" 
                style="height: 20rem">
                
                <div class="card-img-overlay"></div>

                <div class="card-body">
                  <p class="card-text">
                    <b>  <%= listing.title %> </b> <br>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                    <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                  </p>
                </div>
              </div>
            </a>
              <%    }   %>
            
    </div>

  <!-- Script to filter category-->

    <script>
      function filterCategory(category) {
        window.location.href = `/listings?category=${category}`;
      }
    </script>

    <!-- EventListener for tax switch-->

    <script>
        let taxSwitch = document.getElementById("switchCheckDefault") 
        taxSwitch.addEventListener("click", () => {
          let taxInfo = document.getElementsByClassName("tax-info");
         for(info of taxInfo) {
          if(info.style.display != "inline") {
            info.style.display = "inline";
          }  else {
            info.style.display = "none";
          }
            
         }
        });
    </script>
    

  </body> 



 

